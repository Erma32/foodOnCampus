extends layout

block content
    div(class='container')
        h5(class='text-center' style="margin-top: 5px") Food on campus: #{date}
        if weekend
            h4(class='text-center') It's the Weeknd!
            div(class='row')
                div(class='col-3')
                div(class='col-7')
                    img(src='https://media1.tenor.com/images/e573232fbaa3c76f6c5b67fe3a788786/tenor.gif?itemid=15760080')
                div(class='col-2')
        table(class='table table-striped table-sm')
            thead
                tr
                    th(scope='col')
                        a(href='https://morotenopiskan.se/lunch/' target='_blank' rel='noopener') Moroten Och Piskan
                    th(scope= 'col') Dagens
                    th(scope= 'col') Veg
            tbody
                tr
                    th(scope='col')
                    td= mopDagens
                    td= mopVeg
            thead
                tr
                    th(scope='col')
                        a(href='https://www.finninn.se/lunch-meny/' target='_blank' rel='noopener') Finn Inn
                    th(scope= 'col') Dagens
                    th(scope= 'col') Veg
            tbody
                tr
                    th(scope='col') 88kr
                    td= finnDagens
                    td= finnVeg
            thead
                tr
                    th(scope='col')
                        a(href='https://www.bryggancafe.se/' target='_blank' rel='noopener') Bryggan Café
                    th(scope= 'col') Dagens
                    th(scope= 'col') Veg
            tbody
                tr
                    th(scope='col') 89kr
                    td= brygganDagens
                    td= brygganVeg
            thead
                tr
                    th(scope='col')
                        a(href='http://restauranghojdpunkten.se/meny' target='_blank' rel='noopener') Höjdpunkten
                    th(scope='col') Dagens
                    th(scope='col') Dagens 2
            tbody
                tr
                    th(scope='col') 87kr
                    td= hojdpunktenDagens
                    td= hojdpunktenDagens2
            thead
                tr
                    th(scope='col')
                        a(href='http://restaurangedison.se/lunch' target='_blank' rel='noopener') Edison
                    th(scope='col') Dagens
                    th(scope='col') Veg
            tbody
                tr
                    th(scope='col') 90kr
                    td= edisonDagens
                    td= edisonVeg
            thead
                tr
                    th(scope='col')
                        a(href='https://www.mediconvillage.se/sv/restaurant-inspira' target='_blank' rel='noopener') Inspira
                    th(scope='col') Dagens
                    th(scope='col') Veg
            tbody
                tr
                    th(scope='col') 90kr
                    td= inspiraDagens
                    td= inspiraVeg
            thead
                tr
                    th(scope='col')
                        a(href='http://www.linnersmat.se/lunchmeny/' target='_blank' rel='noopener') Linnérs Mat
                    th(scope='col') Dagens
                    th(scope='col') Veg
            tbody
                tr
                    th(scope='col') 115/105kr
                    td= linnersDagens
                    td= linnersVeg
            thead
                tr
                    th(scope='col')
                        a(href='http://www.finnut.se/' target='_blank' rel='noopener') Finn Ut
                    th(scope='col') Dagens
                    th(scope='col') Veg
            tbody
                tr
                    th(scope='col') 70kr
                    td= finnUtDagens
                    td= finnUtVeg
            thead
                tr
                    th(scope='col')
                        a(href='https://restaurangspill.se/' target='_blank' rel='noopener') Spill
                    th(scope='col') Dagens
                    th(scope='col') Veg
            tbody
                tr
                    th(scope='col') 95kr
                    td= spillDagens
                    td= spillVeg
    footer(class="page-footer font-small fixed-bottom indigo bg-light")
        div(class="text-center")
            a(href='https://github.com/Erma32/foodOnCampus' target='_blank' rel='noopener') GitHub