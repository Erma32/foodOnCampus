                    td= edisonVeg
            thead
                tr
                    th(scope='col')
                        a(href='https://www.mediconvillage.se/sv/restaurant-inspira' target='_blank' rel='noopener') Inspira
                    th(scope='col') Dagens
                    th(scope='col') Veg
            tbody
                tr
                    th(scope='col') 90kr
                    td= inspiraDagens
                    td= inspiraVeg

