        h5(class='text-center' style="margin-top: 5px") Food on campus: #{date}
        table(class='table table-striped table-sm')
            thead
                tr
                    th(scope='col')
                        a(href='https://morotenopiskan.se/lunch/' target='_blank' rel='noopener') Moroten Och Piskan
                    th(scope= 'col') Dagens
                    th(scope= 'col') Veg
            tbody
                tr
                    th(scope='col')
                    td= mopDagens
                    td= mopVeg
            thead
                tr
                    th(scope='col')
                        a(href='https://www.finninn.se/lunch-meny/' target='_blank' rel='noopener') Finn Inn
                    th(scope= 'col') Dagens
                    th(scope= 'col') Veg
            tbody
                tr
                    th(scope='col') 88kr
                    td= finnDagens
                    td= finnVeg
            thead
                tr
                    th(scope='col')
                        a(href='https://www.bryggancafe.se/' target='_blank' rel='noopener') Bryggan Café
                    th(scope= 'col') Dagens
                    th(scope= 'col') Veg
            tbody
                tr
                    th(scope='col') 89kr
                    td= brygganDagens
                    td= brygganVeg
            thead
                tr
                    th(scope='col')
